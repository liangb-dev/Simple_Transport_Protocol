    arprecv(s, fp)

    print ""
    print ""
 

"""
SYN/ACK section
"""
    # Construct headers  
    eth_hdr0 = eth_hdr()
    ip_hdr0 = ip_hdr()
    tcp_hdr0 = tcp_hdr() 
    
    # Concatenate headers
    raw_pkt = eth_hdr0.get_hdr() + ip_hdr0.get_hdr() + tcp_hdr0.get_hdr()
    raw_pkt = raw_pkt.replace(' ','')
    
    # Format headers & Get length
    pkt = binascii.unhexlify(raw_pkt)
    pkt_len = struct.pack("!H",len(pkt))    

    print len(pkt_len)
    print raw_pkt
    print len(pkt)
    print "sending GET..."
     
    s.send(pkt_len + pkt, 0)
    print "receiving..."
    
    while True:
        resp = s.recv(56)
        if resp == "": break
        print binascii.hexlify(resp)
        print len(resp)
    s.close()
    print "\done"
    
